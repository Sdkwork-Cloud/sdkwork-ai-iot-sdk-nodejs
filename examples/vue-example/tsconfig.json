{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@views/*": ["src/views/*"],
      "@stores/*": ["src/stores/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@composables/*": ["src/composables/*"]
    },
     "types": ["unplugin-vue-router/client","vite-plugin-vue-meta-layouts/client","@intlify/unplugin-vue-i18n/messages","vite/client"]

  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx", 
    "./typed-router.d.ts", 
    "./auto-imports.d.ts",
    "./components.d.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules","sdkwork-sdk-api-typescript","sdkwork-commons-typescript","sdkwork-sdk-manager-typescript"],
  "references": [{ "path": "./tsconfig.node.json" }]
}